#!/bin/env sh


if [ "x@PYTHON2@" = "xPYTHON2-NOTFOUND" ]; then
    echo SKIP!
    exit 0
    #exit 77
fi

find ${SRCDIR} -type f \
     \( -name  \*.hh -o -name  \*.cc \
     -o -name \*.hpp -o -name \*.cpp \) \
     -exec ${CPPLINT} \
     --extensions=cc,h,cpp,cu,cuh,hh,hpp \
     --filter=-readability/streams \
     {} +
exit $?
